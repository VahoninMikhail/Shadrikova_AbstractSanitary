        <DataGrid x:Name="dataGridViewCustomers" HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="352" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" IsReadOnly="True" Margin="0,0,0,-1"/>
